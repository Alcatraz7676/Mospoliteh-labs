<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="48dp"
        android:text="X=0, Y=0, Z=1"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.496"/>

    <TextView
        android:id="@+id/first_computation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:text="a) X v Y ʌ ¬Z = "
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/values"/>

    <TextView
        android:id="@+id/first_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/first_computation"
        app:layout_constraintLeft_toRightOf="@+id/first_computation"
        tools:text="1"/>

    <TextView
        android:id="@+id/second_computation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:text="б) ¬X ʌ ¬Y = "
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_computation"/>

    <TextView
        android:id="@+id/second_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/second_computation"
        tools:text="0"
        app:layout_constraintBaseline_toBaselineOf="@+id/second_computation"/>

    <TextView
        android:id="@+id/third_computation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="в) ¬(X ʌ Z) v Y = "
        android:textSize="24sp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/second_computation"/>

    <TextView
        android:id="@+id/third_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/third_computation"
        tools:text="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/third_computation"/>
</android.support.constraint.ConstraintLayout>